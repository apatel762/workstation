#!/usr/bin/env bash

systemctl daemon-reload

# --------------------------------------- #
# - enable all the custom systemd units - #
# --------------------------------------- #

# flatpak updates

systemctl enable flatpak-system-update.service
systemctl enable flatpak-system-update.timer
systemctl start flatpak-system-update.timer

# rpm-ostree updates

systemctl enable rpm-ostreed-automatic.timer
systemctl start rpm-ostreed-automatic.timer

# /var/mnt/ssd1 mount

systemctl enable var-mnt-ssd1.mount
systemctl start var-mnt-ssd1.mount

# --------------------------------------- #

# flatpak (user-level) updates

systemctl --user enable flatpak-system-update.service
systemctl --user enable flatpak-system-update.timer
systemctl --user start flatpak-system-update.timer